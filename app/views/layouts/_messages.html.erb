<% flash.each do |type, message| %>
  <div class="container">
    <div class="row sign-up-form">
      <div class="col s12 m12 l12">
        <div class="card-panel <%= type=='notice' ? 'green' : 'red' %> lighten-2 fade-out-target" >
          <span class="white-text">
            <%= message %>
          </span>
        </div>
      </div>
    </div>
  </div>

<% end %>