<div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= course.short_name %>: <%= course.name %> </span>
        <p><%= course.description %></p>
      </div>
      <div class="card-action overflow-hidden">
        <% if logged_in? and !current_user.courses.include?(course) %>
          <%= link_to "Enroll", course_enroll_path(course), method: :post %>
        <% else %>
          <span class="new badge">Already enrolled</span>
        <% end %>
        <% if request.path != course_path(course) %>
          <%= link_to "More infos", course %>
        <% end %>
      </div>
    </div>
  </div>