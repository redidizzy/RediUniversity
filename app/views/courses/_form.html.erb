<%= render 'shared/errors', obj: @course %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <div class="row">
          <%= form_for @course, html: { class: "col s12" } do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter the course name", autofocuse: true %>
                <%= f.label :name, class:"active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :short_name, placeholder: "Enter the course unique code ( Example CS111)" %>
                <%= f.label :short_name, class:"active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.text_area :description, placeholder: "Enter description", class: "materialize-textarea" %>
                <%= f.label :description, class:"active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.button(@course.new_record? ? 'New course <i class="material-icons right">arrow_forward</i>'.html_safe : 'Submit changes <i class="material-icons right">arrow_forward</i>'.html_safe, class:"btn waves-effect waves-light #{@course.new_record? ? 'green' : 'orange'} right") %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
